{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block content %}
<div class="col-12 px-6 align-items-center">

   <div id="carouselExample" class="carousel slide mx-auto" data-bs-theme="light" data-bs-ride="carousel">
      <div class="carousel-inner">
         <div class="carousel-item active">
            <img src="images/bannieres/sonic3.jpg" class="d-block w-100" alt="...">
         </div>
         <div class="carousel-item">
            <img src="images/bannieres/captain_america.jpg" class="d-block w-100" alt="...">
         </div>
         <div class="carousel-item">
            <img src="images/bannieres/mufasa_le_roi_lion.jpg" class="d-block w-100" alt="...">
         </div>
         <div class="carousel-item">
            <img src="images/bannieres/paddington_au_perou.jpg" class="d-block w-100" alt="...">
         </div>
      </div>
      <button class=" owl-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
         <span aria-label="Previous" >‹</span>
      </button>
      <button class="carousel-control-next owl-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
         <span aria-label="Next">›</span>
      </button>
   </div>
   
   
   
   <h1 class="accueil">FILMS A L'AFFICHE</h1>
   
   
   <div class="affiches_carousel mx-auto">
      <div class="owl-carousel">
         
         {% for film in films %}
         <div class="affiche">
            <a href="#" title="image 1" class="lien_affiche">
               <img class="img-fluid mx-auto d-block images_affiches" src="{{ film }}" alt="slide 1">
               <p class="titre_film">titre</p>
            </a>
         </div>
         {% else %}
            
            <div class="affiche">Aucun film trouvé !</div>
         
         {% endfor %}
         
      </div>

   </div>
</div>


{% endblock %}

{% block scripts_supp %}
   <script src="/js/owl.carousel.js"></script>
   <script>
       $(document).ready(function(){
           $(".owl-carousel").owlCarousel({
               center: true,
               items:2,
               loop:true,
               margin:15,
               nav: true,
               dots: false,
               responsive:{
                   600:{
                       items:3
                   },
                   800:{
                       items:4
                   },
                   1000:{
                       items:5
                   },
                   1200:{
                       items:6
                   },
                   1400:{
                       items:7
                   },
                   1600:{
                       items:8
                   },
                   1800:{
                       items:9
                   }
               }
           });
       });
   </script>
{% endblock %}

