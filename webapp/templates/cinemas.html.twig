{% extends 'base.html.twig' %}

{% block title %}Nos cinémas{% endblock %}

{% block content %}
    
    <div class="col-12 mx-auto px-5 py-3 my-3 mb-0 align-items-center page_cinemas">
        
        <div class="card text-bg-dark mb-3 mx-auto">
            
            <div class="card-header fs-5"><h2>{{ block('title') }}</h2></div>
            <div class="card-body p-5 ">
                <h5 class="text-success-emphasis mb-5">Cinéphoria vous propose 5 cinémas en France, et 2 en Belgique :</h5>
                
                
                {% for cinema in cinemas %}
                <div class="row mb-5">
                    <div class="col-12">
                        <img src="images/{{ cinema.nom|slug|lower }}.jpg" class="img-fluid float-end pb-3" alt="{{ cinema.nom }}">
                        
                        <h3>{{ cinema.nom }}</h3>
                        
                        <p>{{ cinema.adresse1 }} </p>
                        <p>{{ cinema.cp }} {{ cinema.ville }}</p>
                    
                    </div>
                </div>
                {% endfor %}
            
            </div>
        </div>
    </div>


{% endblock %}